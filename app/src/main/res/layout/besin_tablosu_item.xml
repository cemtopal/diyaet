<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingLeft="8dp"
    android:gravity="center_vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"


>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/besinIsmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Portakal"
            android:textColor="#222"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Glisemik İndeks :"
                android:layout_marginRight="5dp"
                android:textColor="#333"
                android:textSize="12sp"

                />
            <TextView
                android:id="@+id/besinGlisemikIndeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="#666"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 gr için Glisemik Yük :"
                android:layout_marginRight="5dp"
                android:textColor="#444"
                android:textSize="12sp"
                />
                <TextView
                    android:id="@+id/besinGlisemikYuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="#666"
                    android:textSize="12sp"
                    />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/besinUyariIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:contentDescription="TODO"
            android:clickable="true"
            android:src="@drawable/shape_circle_red" />

    </LinearLayout>








</LinearLayout>