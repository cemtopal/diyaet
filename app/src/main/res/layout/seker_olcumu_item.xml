<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:paddingLeft="8dp"
    android:gravity="center_vertical"
    android:clickable="false"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/selectableItemBackground"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Kan Şekeri :"
                android:textColor="#222"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/sekerOlcumDeger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="106 mg/dL"
                android:textColor="#444"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Tarih :"
                android:layout_marginRight="5dp"
                android:textColor="#333"
                android:textSize="12sp"

                />
            <TextView
                android:id="@+id/sekerOlcumTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.12.2016"
                android:textColor="#666"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saat :"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="16dp"
                android:textColor="#444"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/sekerOlcumSaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:textColor="#666"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Şeker Tipi : "
                android:layout_marginRight="5dp"
                android:textColor="#333"
                android:textSize="12sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Açlık Kan Şekeri"
                android:textColor="#666"
                android:textSize="12sp"
                android:id="@+id/sekerOlcumTip" />

            <TextView
                android:id="@+id/yemekSaati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yemek Saati :"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:textColor="#444"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#666"
                android:textSize="12sp"
                android:id="@+id/sekerOlcumYemekSaat" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sekerUyariIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:contentDescription="TODO"
            android:clickable="true"
            android:src="@drawable/shape_circle_red" />

    </LinearLayout>








</LinearLayout>